<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/contact_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_background"
        android:src="@drawable/piter"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/contact_view"
        app:layout_constraintStart_toStartOf="@id/contact_view"
        app:layout_constraintBottom_toBottomOf="@id/contact_view"
        />

    <TextView
        android:id="@+id/contact_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="이름"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/contact_image"
        app:layout_constraintTop_toTopOf="@id/contact_image"
        app:layout_constraintBottom_toBottomOf="@id/contact_image"
        />


    <CheckBox
        android:id="@+id/empty_heart_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:background="@drawable/heart_selector"
        android:button="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/contact_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/contact_name_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C2F6BD"
        app:layout_constraintTop_toBottomOf="@id/contact_view"
        />


</androidx.constraintlayout.widget.ConstraintLayout>