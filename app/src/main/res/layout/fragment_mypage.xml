<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_my_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/piter"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/name_my_text"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="피터"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/con_my_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_my_iv"
        app:layout_constraintVertical_bias="0.21" />



    <TextView
        android:id="@+id/con_my_text"
        android:layout_width="341dp"
        android:layout_height="38dp"
        android:background="@drawable/backgroundtop"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="연락처 정보"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_my_iv"
        app:layout_constraintVertical_bias="0.304" />

    <TextView
        android:id="@+id/contact_my_text"
        android:layout_width="341dp"
        android:layout_height="61dp"
        android:background="@drawable/backgroundbottom"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="010-0000-0405"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_my_text" />

    <ImageView
        android:id="@+id/call_my_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phoneicon"
        app:layout_constraintBottom_toBottomOf="@+id/contact_my_text"
        app:layout_constraintEnd_toEndOf="@+id/contact_my_text"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/contact_my_text"
        app:layout_constraintTop_toBottomOf="@+id/con_my_text"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/em_my_text"
        android:layout_width="341dp"
        android:layout_height="38dp"
        android:background="@drawable/backgroundtop"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="이메일"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_my_text"
        app:layout_constraintVertical_bias="0.131" />

        <TextView
            android:id="@+id/email_my_text"
            android:layout_width="341dp"
            android:layout_height="61dp"
            android:background="@drawable/backgroundbottom"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:text="apple@apple.com"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/em_my_text" />

    <ImageView
        android:id="@+id/email_my_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/mailicon"
        app:layout_constraintBottom_toBottomOf="@+id/email_my_text"
        app:layout_constraintEnd_toEndOf="@+id/email_my_text"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@+id/email_my_text"
        app:layout_constraintTop_toBottomOf="@+id/em_my_text"
        app:layout_constraintVertical_bias="0.444" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>